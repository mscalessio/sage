<!doctype html>
<html {{ function('language_attributes') }}>

{% include 'head.twig' %}

  <body {{ function('body_class') }}>
    {% include 'header.twig' %}
    <div class="container" role="document">
      <div class="row">
        <main class="{{ display_sidebar ? 'col-md-8' : 'col-md-12'}}">
          {% block content %}{% endblock %}
        </main>
        {% if display_sidebar %}
        <aside class="col-md-4">
          {% block sidebar %}
            {% include 'sidebar.twig' %}
          {% endblock %}
        </aside>
        {% endif %}
      </div>
    </div>
    {% include 'footer.twig' %}
  </body>

</html>
